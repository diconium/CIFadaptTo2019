{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "dom",
      "es6",
      "es2015.promise"
    ]
  },
  "exclude": [
    "node_modules/",
    "lib/",
  ],
  "include": ["src"]
}